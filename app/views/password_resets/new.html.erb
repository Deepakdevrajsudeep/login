<h1> Reset Password</h1>
<%= form_with url: password_reset_path do |form| %>
	<div class= "mb-3">
		<%= form.label :email %>
		<%= form.text_field :email, class: "form_control", placeholder: "steve@apple.com" %>
	</div>
	<div class= "mb-3">
		<%= form.label :password %>
		<%= form.password_field :password, class: "form_control", placeholder: "password" %>
	</div>
	<div class= "mb-3">
		<%= form.submit "Reset Password", class: "btn btn-primary" %>
	</div>
<% end %>